<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile_App_Portfolio"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app01_instagram.InstagramActivity"
            android:exported="false" />

        <activity
            android:name=".app02_settings.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".app03_calculator.CalculatorActivity"
            android:exported="false" />

        <activity
            android:name=".app05_connect_three.ConnectThreeActivity"
            android:exported="false" />

        <activity
            android:name=".app06_passing_intents.IntentsActivity"
            android:exported="false" />

        <activity
            android:name=".app06_passing_intents.ProfileActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>